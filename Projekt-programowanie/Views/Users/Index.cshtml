@model ProjektProgramowanie.Models.UserListViewModel

<h1>User List</h1>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Created At</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Adress</td>
                <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (Model.UserRoles.ContainsKey(user.Id))
                    {
                        @string.Join(", ", Model.UserRoles[user.Id])
                    }
                    else
                    {
                        <span>No Roles</span>
                    }
                </td>
                <td>
                    <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn btn-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
