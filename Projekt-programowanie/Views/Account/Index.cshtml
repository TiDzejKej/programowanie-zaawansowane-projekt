@model IEnumerable<ProjektProgramowanie.Models.UserWithRolesViewModel>

@{
    ViewData["Title"] = "Active users list";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Created At</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Adress</td>
                <td>@item.CreatedAt</td>
                <td>@string.Join(", ", item.Roles)</td>
                <td>
                    <a href="@Url.Action("Detail", new { id = item.UserId })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Edit", new { id = item.UserId })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.UserId })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

               