@model ProjektProgramowanie.Models.UserWithRolesViewModel

@{
    ViewData["Title"] = "Delete User";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete the following user?</h3>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Adress</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.UserId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Account")" class="btn btn-secondary">Cancel</a>
</form>
