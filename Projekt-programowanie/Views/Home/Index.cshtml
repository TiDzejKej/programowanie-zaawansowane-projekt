@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
            <div class="col-md-3 mb-4">
                <div class="e-card" style="cursor: pointer;" onclick="location.href='@Url.Action("Index", "Scheduler")'">
                    <div class="card-body">
                        <h5 class="card-title">Scheduler</h5>
                        <p class="card-text">Manage your schedule.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="e-card" style="cursor: pointer;" onclick="location.href='@Url.Action("Index", "Survey")'">
                    <div class="card-body">
                        <h5 class="card-title">Survey</h5>
                        <p class="card-text">Participate in surveys.</p>
                    </div>
                </div>
            </div>

            @if (User.IsInRole("admin") || User.IsInRole("employee"))
            {
                <div class="col-md-3 mb-4">
                    <div class="e-card" style="cursor: pointer;" onclick="location.href='@Url.Action("Index", "Account")'">
                        <div class="card-body">
                            <h5 class="card-title">Users</h5>
                            <p class="card-text">Manage user accounts.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-4">
                    <div class="e-card" style="cursor: pointer;" onclick="location.href='@Url.Action("Index", "Groups")'">
                        <div class="card-body">
                            <h5 class="card-title">Groups</h5>
                            <p class="card-text">Manage groups.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-4">
                    <div class="e-card" style="cursor: pointer;" onclick="location.href='@Url.Action("List", "ContactForm")'">
                        <div class="card-body">
                            <h5 class="card-title">Contacts</h5>
                            <p class="card-text">View and manage contacts.</p>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
