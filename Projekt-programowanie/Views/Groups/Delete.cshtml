@model ProjektProgramowanie.Models.Group

@{
    ViewData["Title"] = "Delete Group";
}

<h1>Delete Group</h1>

<p>Are you sure you want to delete the group <strong>@Model.Name</strong>?</p>

<dl class="row">
    <dt class="col-sm-2">Group Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Teacher</dt>
    <dd class="col-sm-10">
        @if (Model.Teacher != null)
        {
            @($"{Model.Teacher.FirstName} {Model.Teacher.LastName}")
        }
        else
        {
            <span class="text-muted">No teacher assigned</span>
        }
    </dd>

    <dt class="col-sm-2">Students</dt>
    <dd class="col-sm-10">
        @if (Model.Students.Any())
        {
            <ul>
                @foreach (var student in Model.Students)
                {
                    <li>@($"{student.FirstName} {student.LastName}")</li>
                }
            </ul>
        }
        else
        {
            <span class="text-muted">No students assigned</span>
        }
    </dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
